<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrderInfoMapper">

    <sql id="Base_Column_List">
        id,u_id,status,time,price
    </sql>

    <select id="selectAll" resultType="com.example.entity.OrderInfo">
        select
        <include refid="Base_Column_List" />
        from orderInfo
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="uId != null"> and u_id= #{uId}</if>
            <if test="status != null"> and status= #{status}</if>
            <if test="time != null"> and time= #{time}</if>
            <if test="price != null"> and price= #{price}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.OrderInfo">
        select
        <include refid="Base_Column_List" />
        from orderInfo
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from orderInfo
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.OrderInfo" useGeneratedKeys="true">
        insert into orderInfo
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="uId != null">u_id,</if>
                <if test="status != null">status,</if>
                <if test="time != null">time,</if>
                <if test="price != null">price,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="uId != null">#{uId},</if>
                <if test="status != null">#{status},</if>
                <if test="time != null">#{time},</if>
                <if test="price != null">#{price},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.OrderInfo">
        update orderInfo
        <set>
            <if test="uId != null">
                u_id = #{uId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="price != null">
                user = #{price},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>