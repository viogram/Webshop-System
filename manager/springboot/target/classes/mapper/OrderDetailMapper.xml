<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.OrderDetailMapper">

    <sql id="Base_Column_List">
        id,o_id,p_id,num
    </sql>

    <select id="selectAll" resultType="com.example.entity.OrderDetail">
        select orderDetail.*, goods.name as goodsName
        from orderDetail
        left join goods on orderDetail.p_id = goods.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="oId != null"> and o_id= #{oId}</if>
            <if test="pId != null"> and p_id= #{pId}</if>
            <if test="num != null"> and num= #{num}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.OrderDetail">
        select
        <include refid="Base_Column_List" />
        from orderDetail
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from orderDetail
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.OrderDetail" useGeneratedKeys="true">
        insert into orderDetail
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="oId != null">o_id,</if>
                <if test="pId != null">p_id,</if>
                <if test="num != null">num,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="oId != null">#{oId},</if>
                <if test="pId != null">#{pId},</if>
                <if test="num != null">#{num},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.OrderDetail">
        update orderDetail
        <set>
            <if test="oId != null">
                o_id = #{oId},
            </if>
            <if test="pId != null">
                p_id = #{pId},
            </if>
            <if test="num != null">
                num = #{num},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>