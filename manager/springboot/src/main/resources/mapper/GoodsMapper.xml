<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.GoodsMapper">

    <sql id="Base_Column_List">
        id,name,img,description,price,count,t_id,
    </sql>

    <select id="selectAll" resultType="com.example.entity.Goods">
        select goods.*, type.name as tName
        from goods
        left join type on goods.t_id = type.id
        <where>
            <if test="id != null"> and goods.id= #{id}</if>
            <if test="name != null"> and goods.name like concat('%', #{name}, '%')</if>
            <if test="description != null"> and description= #{description}</if>
            <if test="img != null"> and img= #{img}</if>
            <if test="price != null"> and price= #{price}</if>
            <if test="count != null"> and goods.count= #{count}</if>
            <if test="tId != null"> and t_id= #{tId}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Goods">
        select
        <include refid="Base_Column_List" />
        from goods
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from goods
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Goods" useGeneratedKeys="true">
        insert into goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="name != null">goods.name,</if>
                <if test="description != null">description,</if>
                <if test="img != null">img,</if>
                <if test="price != null">price,</if>
                <if test="count != null">goods.count,</if>
                <if test="tId != null">t_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="name != null">#{name},</if>
                <if test="description != null">#{description},</if>
                <if test="img != null">#{img},</if>
                <if test="price != null">#{price},</if>
                <if test="count != null">#{count},</if>
                <if test="tId != null">#{tId},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Goods">
        update goods
        <set>
            <if test="name != null">
                goods.name = #{name},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="count != null">
                goods.count = #{count},
            </if>
            <if test="tId != null">
                t_id = #{tId},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>